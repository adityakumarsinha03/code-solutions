/*

Given an integer, convert it to a roman numeral, and return a string corresponding to its roman numeral version

Input is guaranteed to be within the range from 1 to 3999.

Example :

Input : 5
Return : "V"

Input : 14
Return : "XIV"
 Note : This question has a lot of scope of clarification from the interviewer. 
 Please take a moment to think of all the needed clarifications and see the expected response using â€œSee Expected Outputâ€ 
 For the purpose of this question, https://projecteuler.net/about=roman_numerals has very detailed explanations. 

*/

Solution:

string ch(int y, int u){
    
    string s = "";
    if(u == 1){
        if(y == 1){
            s = "I";
        }
        else if(y == 2){
            s = "II";
        }
        else if(y == 3){
            s = "III";
        }
        else if(y == 4){
            s = "IV";
        }
        else if(y == 5){
            s = "V";
        }
        else if(y == 6){
            s = "VI";
        }
        else if(y == 7){
            s = "VII";
        }else if(y == 8){
            s = "VIII";
        }else if(y == 9){
            s = "IX";
        }
    }
    if(u == 2){
        if(y == 1){
            s = "X";
        }
        else if(y == 2){
            s = "XX";
        }
        else if(y == 3){
            s = "XXX";
        }
        else if(y == 4){
            s = "XL";
        }
        else if(y == 5){
            s = "L";
        }
        else if(y == 6){
            s = "LX";
        }
        else if(y == 7){
            s = "LXX";
        }else if(y == 8){
            s = "LXXX";
        }else if(y == 9){
            s = "XC";
        }
    }
    if(u == 3){
        if(y == 1){
            s = "C";
        }
        else if(y == 2){
            s = "CC";
        }
        else if(y == 3){
            s = "CCC";
        }
        else if(y == 4){
            s = "CD";
        }
        else if(y == 5){
            s = "D";
        }
        else if(y == 6){
            s = "DC";
        }
        else if(y == 7){
            s = "DCC";
        }else if(y == 8){
            s = "DCCC";
        }else if(y == 9){
            s = "CM";
        }
    }
    if(u == 4){
        if(y == 1){
            s = "M";
        }
        else if(y == 2){
            s = "MM";
        }
        else if(y == 3){
            s = "MMM";
        }
    }
    return s;
}

string Solution::intToRoman(int n){
    
    string s = "";
    
    int m = n;
    int y;
    int u = 1;
    while(m>0){
        y = m%10;
        s = ch(y, u) + s;
        m = m/10;
        u++;
    }
    return s;
}
